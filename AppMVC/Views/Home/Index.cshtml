@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/style.css" rel="stylesheet" type="text/css">

<div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li id="l1" class="active"><a href="#servicios" aria-controls="servicios" role="tab" data-toggle="tab">Servicios</a></li>
        <li id="l2"><a href="#documentos" aria-controls="documentos" role="tab" data-toggle="tab">Documentos</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="servicios">
        AQUI SE MUESTRAN LOS SERVICIOS
        </div>

        <div role="tabpanel" class="tab-pane" id="documentos">
            <div>
                <b>
                    <u>
                        ASESORIA
                    </u>
                </b>
            </div>

            <form action="/my-handling-form-page" method="post">
                <div>
                    <label for="dni_dif">DNI del difunto</label>
                    <input type="text" name="NombreImgDniDifunto" value="Nombre del archivo" readonly>
                    <button type="button" onclick="location.href='@Url.Action("BtnCargarImagenDni", "Home")'">
                    Cargar imagen
                    </button>
                    <button onclick="location.href='@Url.Action("ActionName", "ControllerName")'">
                        Ver
                    </button>

                    <h3>@ViewBag.ImagenDNI</h3>
                </div>
                <div>
                    <label for="cert">Certificado de defunción</label>
                    <input type="text" name="NombreArchivoDefuncion" value="Nombre del archivo" readonly>
                    <button type="submit">Cargar imagen</button>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="dni_contr">DNI del contratante</label>
                    <input type="text" name="NombreArchivoDniContratante" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="decl_jurada">Declaración jurada</label>
                    <input type="text" name="NombreArchivoDniContratante" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="permiso">Permiso de inhumación</label>
                    <input type="text" name="NNombreArchivoDniContratante" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="form607">Formulario 607</label>
                    <input type="text" name="NombreArchivoFormulario607" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="acreditacion">Acreditación del vinculo</label>
                    <input type="text" name="NombreArchivoAcreditacionVinculo" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="dni_vinc">DNI vinculante</label>
                    <input type="text" name="NombreArchivoDniVinculante" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <label for="aut_crem">Autorización de cremación</label>
                    <input type="text" name="NombreArchivoAutorizacionCremacion" value="Nombre del archivo" readonly>
                    <button type="submit">Ver</button>
                </div>
                <div>
                    <input type="checkbox" name="PendienteDocumentacion"> Pendiente de Documentación<br>
                </div>
            </form>
        </div>
    </div>

</div>

@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/style.css" rel="stylesheet" type="text/css">

<div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li id="l1" class="active"><a href="#servicios" aria-controls="servicios" role="tab" data-toggle="tab">Servicios</a></li>
        <li id="l2"><a href="#documentos" aria-controls="documentos" role="tab" data-toggle="tab">Documentos</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="servicios">
        AQUI SE MUESTRAN LOS SERVICIOS
        </div>

        <div role="tabpanel" class="tab-pane" id="documentos"> 
            <div>
                <b>
                    <u>
                        ASESORIA
                    </u>
                </b>
            </div>

            <form action="/my-handling-form-page" method="post">
                    
                <div class="container">
                    <div class="row">
                        <div class="col-md-2">
                            <label for="dni_dif">DNI del difunto</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="NombreImgDniDifunto" accept="image/png, image/jpeg, application/pdf">
                        </div>
                        <div class="col-md-2">
                            <button type="submit">Ver</button>
                        </div>
                            <h3>@ViewBag.ImagenDNI</h3>
                        </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="cert">Certificado de defunción</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoDefuncion" accept="image/png, image/jpeg, application/pdf">
                        </div>
                        <div class="col-md-2">
                            <button type="submit">Ver</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="dni_contr">DNI del contratante</label>
                        </div>  
                        <div class="col-md-3">
                            <input type="file" name="ArchivoDniContratante" accept="image/png, image/jpeg, application/pdf">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="decl_jurada">Declaración jurada</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoDeclaracionJurada" accept="image/png, image/jpeg, application/pdf">
                        </div>
                            
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="permiso">Permiso de inhumación</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoPermisoInhumacion" accept="image/png, image/jpeg, application/pdf">
                        </div>
                            
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="form607">Formulario 607</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoFormulario607" accept="image/png, image/jpeg, application/pdf">
                        </div>
                           
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="acreditacion">Acreditación del vinculo</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoAcreditacionVinculo" accept="image/png, image/jpeg, application/pdf">
                        </div>
                            
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="dni_vinc">DNI vinculante</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoDniVinculante" accept="image/png, image/jpeg, application/pdf">
                        </div>
                            
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="aut_crem">Autorización de cremación</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="ArchivoAutorizacionCremacion" accept="image/png, image/jpeg, application/pdf">
                        </div>
                    </div>
                    <div class="row">
                        <input type="checkbox" name="PendienteDocumentacion"> Pendiente de Documentación<br>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
